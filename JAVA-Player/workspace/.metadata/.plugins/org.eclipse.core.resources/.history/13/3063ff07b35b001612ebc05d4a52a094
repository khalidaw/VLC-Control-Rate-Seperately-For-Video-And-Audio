import java.awt.EventQueue;
import java.util.ArrayList;
import java.util.List;

import javax.swing.JFrame;
import javax.swing.JTextField;


public class mainView {

	/**
	 * UI Constants
	 */
	static int width = 900;
	static int margin_height = 5;
	static int margin_width = 5;
	static int textFieldWidth = 10;
	
	private JFrame frame;

	
	private List<JTextField> startTimes = new ArrayList<JTextField>();
	private List<JTextField> endTimes = new ArrayList<JTextField>();
	private List<JTextField> rates = new ArrayList<JTextField>();

	
	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					mainView window = new mainView();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public mainView() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		/*
		 * Calculate height
		 */
		int height = startTimes.size();
		
		frame = new JFrame();
		frame.setBounds(100, 100, width, height);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		JLabel startLabel = new JLabel("Start");
		JLabel endLabel = new JLabel("End");
		JLabel rateLabel = new JLabel("Rate");
		JButton syncWait = new JButton("+");

		
		int heightIndex = 0;
		for (JTextField jTextField: startTimes) {
			jTextField.setBounds(0, heightIndex, margin_width, margin_height);
			frame.getContentPane().add(jTextField);
		}
		
		heightIndex = 0;
		for (JTextField jTextField: startTimes) {
			jTextField.setBounds(textFieldWidth+margin_width, heightIndex, margin_width, margin_height);
			frame.getContentPane().add(jTextField);
		}

		heightIndex = 0;
		for (JTextField jTextField: startTimes) {
			jTextField.setBounds(2*textFieldWidth+2*margin_width, heightIndex, margin_width, margin_height);
			frame.getContentPane().add(jTextField);
		}
	}

}
